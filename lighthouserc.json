{
  "ci": {
    "collect": {
      "url": [
        "http://localhost:3000/en",
        "http://localhost:3000/en/development",
        "http://localhost:3000/en/services",
        "http://localhost:3000/en/contact",
        "http://localhost:3000/en/portfolio",
        "http://localhost:3000/sk",
        "http://localhost:3000/sk/vyvoj",
        "http://localhost:3000/sk/sluzby"
      ],
      "numberOfRuns": 3,
      "settings": {
        "chromeFlags": "--no-sandbox --disable-dev-shm-usage --headless"
      }
    },
    "assert": {
      "assertions": {
        "categories:performance": ["warn", {"minScore": 0.8}],
        "categories:accessibility": ["warn", {"minScore": 0.9}],
        "categories:best-practices": ["warn", {"minScore": 0.85}],
        "categories:seo": ["warn", {"minScore": 0.9}],
        "categories:pwa": ["off"],
        
        "first-contentful-paint": ["warn", {"maxNumericValue": 2500}],
        "largest-contentful-paint": ["warn", {"maxNumericValue": 3000}],
        "first-meaningful-paint": ["warn", {"maxNumericValue": 2500}],
        "speed-index": ["warn", {"maxNumericValue": 3500}],
        "total-blocking-time": ["warn", {"maxNumericValue": 400}],
        "cumulative-layout-shift": ["warn", {"maxNumericValue": 0.15}],
        
        "server-response-time": ["warn", {"maxNumericValue": 1000}],
        "redirects": ["warn", {"maxNumericValue": 1}],
        "uses-text-compression": "warn",
        "uses-responsive-images": "warn",
        "offscreen-images": "off",
        "render-blocking-resources": "off",
        "unused-css-rules": "off",
        "unused-javascript": "off",
        
        "meta-description": "warn",
        "document-title": "warn",
        "html-has-lang": "warn",
        "html-lang-valid": "warn",
        "hreflang": "off",
        "canonical": "warn",
        "robots-txt": "warn",
        "structured-data": "off",
        "tap-targets": "warn",
        "viewport": "warn"
      }
    },
    "upload": {
      "target": "temporary-public-storage"
    },
    "server": {
      "port": 9090,
      "storage": "./reports/.lighthouseci"
    }
  }
}
