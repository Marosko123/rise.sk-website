# Environment variables template
# Copy this file to .env.local and fill in your actual values

# Application
NEXT_PUBLIC_APP_NAME="RISE App"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# EmailJS Configuration (Frontend email service)
# Get these values from your EmailJS dashboard after setup
NEXT_PUBLIC_EMAILJS_SERVICE_ID=your_service_id_here
NEXT_PUBLIC_EMAILJS_TEMPLATE_ID=your_template_id_here
NEXT_PUBLIC_EMAILJS_AUTO_REPLY_TEMPLATE_ID=your_auto_reply_template_id_here
NEXT_PUBLIC_EMAILJS_PUBLIC_KEY=your_public_key_here

# Development
NODE_ENV=development

# Optional: Analytics
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Optional: Vercel
VERCEL_URL=your-app.vercel.app

# SEO & Performance Monitoring
# =============================

# Google Search Console Verification
# Get from: https://search.google.com/search-console
# Choose "HTML tag" method and copy the content attribute
NEXT_PUBLIC_GOOGLE_VERIFICATION=your-google-verification-code-here

# Google Analytics 4 (for performance monitoring)
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Performance Monitoring Settings
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true
NEXT_PUBLIC_WEB_VITALS_ATTRIBUTION=true

# Core Web Vitals Reporting Endpoint (optional)
NEXT_PUBLIC_VITALS_URL=/api/vitals

# SEO Configuration
NEXT_PUBLIC_SITE_URL=https://rise.sk
NEXT_PUBLIC_DEFAULT_LOCALE=en

# Environment
NEXT_PUBLIC_ENVIRONMENT=production

# Instructions:
# 1. Copy this file to .env.local
# 2. Replace placeholder values with actual codes
# 3. For Google Search Console:
#    - Go to https://search.google.com/search-console
#    - Add your site property
#    - Choose "HTML tag" verification method
#    - Copy the content value from the meta tag
