{
  "name": "rise-app",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "next dev -p 3000 --turbopack",
    "dev:no-turbo": "next dev -p 3000",
    "build": "next build",
    "build:analyze": "ANALYZE=true npm run build",
    "start": "next start -p 3000",
    "prod": "npm run build && npm run start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "lint:strict": "next lint --max-warnings 0",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "rm -rf .next out node_modules/.cache",
    "clean:all": "rm -rf .next out node_modules",
    "reinstall": "npm run clean:all && npm install",
    "export": "next build && next export",
    "serve": "npx serve@latest out",
    "test": "echo 'No tests specified yet'",
    "test:e2e": "echo 'E2E tests not configured yet'",
    "preview": "npm run build && npm run start",
    "deploy:vercel": "vercel --prod",
    "deploy:vercel:preview": "vercel",
    "postbuild": "echo 'Build completed successfully!'",
    "prebuild": "npm run type-check && npm run lint:strict",
    "health": "curl -f http://localhost:3000/api/health || exit 1",
    "bundle-analyzer": "cross-env ANALYZE=true npm run build",
    "update-deps": "npm update && npm audit fix",
    "setup": "npm install && npm run build",
    "full-check": "npm run type-check && npm run lint && npm run build",
    "optimize-images": "node scripts/optimize-images.js",
    "seo-check": "./scripts/seo-check.sh",
    "bimi:svgo": "svgo --config tools/svgo-bimi.config.js public/.well-known/bimi/rise.svg",
    "bimi:test": "node -e \"const https=require('https'); const url=process.env.BIMI_URL||'https://rise.sk/.well-known/bimi/rise.svg'; https.get(url,res=>{console.log(res.statusCode,res.headers['content-type']);});\"",
    "performance-audit": "npx lighthouse http://localhost:3000 --output=html --output-path=./reports/lighthouse-report.html",
    "performance-audit:ci": "npx lighthouse http://localhost:3000 --output=json --output-path=./reports/lighthouse-report.json --chrome-flags='--headless'",
    "vitals-report": "node scripts/generate-vitals-report.js",
    "commit": "cz",
    "prepare": "husky install || echo 'Husky not installed'",
    "git-hooks": "./scripts/install-git-hooks.sh",
    "size-limit": "size-limit",
    "stylelint": "stylelint 'src/**/*.{css,scss}' --fix",
    "stylelint:check": "stylelint 'src/**/*.{css,scss}'",
    "analyze:bundle": "cross-env ANALYZE=true npm run build",
    "check-deps": "npm outdated",
    "security-audit": "npm audit && npm audit fix"
  },
  "dependencies": {
    "@emailjs/browser": "^4.4.1",
    "@keystatic/core": "^0.5.48",
    "@keystatic/next": "^5.0.4",
    "@sendgrid/mail": "^8.1.5",
    "@studio-freight/lenis": "^1.0.42",
    "@types/nodemailer": "^6.4.17",
    "canvas-confetti": "^1.9.4",
    "clsx": "^2.1.1",
    "framer-motion": "^12.16.0",
    "gray-matter": "^4.0.3",
    "gsap": "^3.13.0",
    "lenis": "^1.3.4",
    "locomotive-scroll": "^4.1.4",
    "lottie-react": "^2.4.1",
    "lucide-react": "^0.513.0",
    "next": "15.3.3",
    "next-intl": "^4.1.0",
    "next-mdx-remote": "^5.0.0",
    "nodemailer": "^7.0.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwind-merge": "^3.3.1",
    "use-debounce": "^10.0.6"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@lhci/cli": "^0.15.1",
    "@size-limit/preset-app": "^11.0.0",
    "@tailwindcss/typography": "^0.5.19",
    "@types/canvas-confetti": "^1.9.0",
    "@types/node": "^20",
    "@types/react": "19.1.6",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.16",
    "commitizen": "^4.3.0",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9",
    "eslint-config-next": "15.3.3",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "postcss": "^8.4.33",
    "prettier": "^3.1.1",
    "sharp": "^0.34.5",
    "size-limit": "^11.0.1",
    "stylelint": "^16.0.2",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-config-tailwindcss": "^0.0.7",
    "stylelint-order": "^6.0.4",
    "svgo": "^3.0.2",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "browserslist": [
    "chrome >= 92",
    "safari >= 15.4",
    "firefox >= 90",
    "ios >= 15.4",
    "not op_mini all",
    "not IE 11"
  ],
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,scss,md}": [
      "prettier --write"
    ],
    "*.{css,scss}": [
      "stylelint --fix"
    ]
  },
  "size-limit": [
    {
      "path": ".next/static/**/*.js",
      "limit": "200 KB"
    }
  ]
}
